<body>
    <div class = "title"> Trip Management</div>
    <div class = "searchbox"> 

<form id ="search"action = "/tripmanagement/search" method = "GET">
    <input id = "search" type="text" placeholder="Search.." name="search">
    <button id = "sbutton" type="submit">Search</button>
    </form>

    <button id = "add" onclick="movepage('addnewtrip')">Add</button>
    </div>
        <div class="section whiteboard">
            <div class = "left-col">
                
                <h1>Filter</h1>
                <button class = "mode"> Clear</button>
                
                <div class = "date">
                    <hr></hr>
                    <h1>Date</h1>
                    <ul id = "filters">
                    {{#each date}}
                    <li>
                    <input type = "checkbox" name = "date"  value = "{{this.date}}" class = "filter"> <label for="vehicle1">{{this.date}}</label>  
                    </li>
                    {{/each}}
                    </ul>
                   
                
                </div>
            </div>
        <div class = "modes">
            <button class = "mode" onclick="uncheck()">Unselect</button>
            <form id = "modifytrip" method ="GET" action="/addnewtrip/modify">
            <button class = "mode">Modify</button>
            <button class = "mode" formaction="/tripmanagement/delete" formmethod='post'>Delete</button>
        </div>
        <li id = "mid">
            {{#each data}}
            <ul class = "trip" id = "{{this.date}}" data-category="{{this.date}}">
                
                <div >
                    <input type = "radio" name = "id" id = "date1" value = "{{this._id}}"> <button id = "b"type = "submit" formaction="/locationdisplay/{{this._id}}" formmethod="get">{{this.date}}-{{this.address.address}}</button>  
                    
                    <div class ="note">{{this.note}}</div>
                </div>
                <hr>
            </ul>
            {{/each}}
        </li>


    </div>

</body>